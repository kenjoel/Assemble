{{#partial "start"}}
    <form action="/newhero" method="post">
        <h1>Add a hero to Squad</h1>
        <div class="form-group">
            <label for="name">Enter Squad's Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="age">Enter Squad's Size</label>
            <input type="text" class="form-control" id="size" name="size">
        </div>
        <div class="form-group">
            <label for="powers">Enter Squad's Cause</label>
            <input type="text" class="form-control" id="cause" name="cause">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{{/partial}}

{{> layout.hbs}}