{{#partial "start"}}
    <body id="formation" style="background-image: url('images/878752.jpg');background-size:cover;background-repeat:no-repeat;">
    <form action="/success" method="post">
        <h1 class="text-white">CHOOSE YOUR SQUAD</h1>
        <div class="form-group">
            <label for="name" class="text-white">Enter Squad's Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="age" class="text-white">Enter Squad's Size</label>
            <input type="number" class="form-control" id="size" name="size" required>
        </div>
        <div class="form-group">
            <label for="powers" class="text-white">Enter Squad's Cause</label>
            <textarea rows="3" class="form-control" id="cause" name="cause" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </body>
{{/partial}}

{{> layout.hbs}}